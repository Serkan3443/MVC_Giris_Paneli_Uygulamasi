@model MVC.Entities.Role

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Role</h4>
    <hr />
    @if(ViewBag.Message is not null)
    {
        <p class="text-danger">@ViewBag.Message</p>
    }
    <dl class="row">
       
        <dt class = "col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Users)
        </dt>

        <dd class="col-10">
            @Html.DisplayFor(model => model.Users.Count)
        </dt>
    </dl>
    
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Guid" />
        <input type="submit" value="Yes" class="btn btn-danger" /> &nbsp;&nbsp;|
        <a asp-action="Index" class="btn btn-success">No</a>
    </form>
</div>
