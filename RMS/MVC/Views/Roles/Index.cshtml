@model IEnumerable<MVC.Entities.Role>

@{
	ViewData["Title"] = "Roles";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Users)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>

				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Users.Count)
				</td>
				<td>
					<a asp-action="Edit" asp-route-guid="@item.Guid">Edit</a> |&nbsp; &nbsp;
					<a asp-action="Details" asp-route-guid="@item.Guid">Details</a> |&nbsp;&nbsp;
					<a asp-action="Delete" asp-route-guid="@item.Guid">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
